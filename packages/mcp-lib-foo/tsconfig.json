{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": false,
    "noEmit": false
  },
  "include": [
    "src/**/*",
    "*.ts",
    "**/*.test.ts",
    "features/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}