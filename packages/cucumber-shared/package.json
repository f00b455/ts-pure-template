{
  "name": "@ts-template/cucumber-shared",
  "version": "0.0.0",
  "private": true,
  "description": "Shared Cucumber step definitions for TypeScript monorepo",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./steps/*": {
      "types": "./dist/steps/*.d.ts",
      "import": "./dist/steps/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@cucumber/cucumber": "^11.0.1",
    "@ts-template/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "typescript": "^5.3.3"
  }
}