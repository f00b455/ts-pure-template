{
  "name": "@ts-template/cucumber-shared",
  "version": "0.0.0",
  "private": true,
  "description": "Shared Cucumber step definitions for monorepo",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./steps/*": {
      "types": "./dist/steps/*.d.ts",
      "import": "./dist/steps/*.js",
      "require": "./dist/steps/*.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@types/node": "^22.6.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "dependencies": {
    "@ts-template/shared": "workspace:*"
  }
}